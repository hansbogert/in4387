#!/bin/bash

# opts
mcrlOptions=''
while getopts ":m:f:" opt; do
  case $opt in
    m) # mcrl2lps options
      mcrl2lpsOptions="$OPTARG"
      ;;
    f)
      # we want to use file option, so no reading from 2nd argument 
      mcfFile="$OPTARG"
    ;;
    \?)
      echo "invalid option: -$OPTARG"
      exit 1
    ;;
    :)
      echo "-$OPTARG needs argument"
      exit 1
    ;;
  esac
  shift $((OPTIND-1))
done

function executeFromFile {
  #args
  mcrlFile=$1

  if [[ -z "$mcfFile" ]]; then
    echo no mcf file give, use the -f option
    usage
    exit 1;
  fi


  mcrl22lps $mcrl2lpsOptions $mcrlFile | lps2pbes -f $mcfFile | pbes2bool
}

function executeFromArgument {
  mcrlFile=$1
  formula=$2

  #execute
  mcrl22lps $mcrl2lpsOptions $mcrlFile | lps2pbes -f <(echo "$formula") | pbes2bool

}

function usage {
  echo "usage: mcrl22bool [-m mcrl2lps-options] mcrl2-file formula"
  echo "       mcrl22bool [-m mcrl2lps-options] -f formula-file mcrl2-file"
}

## Script main

# script syntax ok
if (( $# == 1 )); then
  executeFromFile $1
elif (( $# == 2  )); then
  executeFromArgument $1 "$2"
else
  usage
  exit 1;
fi
